@model BusinessManagementSystemApp.Models.Models.CategoryViewModel
@{
    ViewBag.Title = "CategoryDelete";
}
<div class="container" style="width:70%;margin-top:3%;">
    <div class="form-group row">
        <a style="margin-top:2%" href="/Category/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Category List</a><hr />
        <h3 class="text-danger">Are you sure to delete <b style="background-color:yellow;"><u>'@Model.CategoryName'</u></b> category?</h3>
    </div>
</div>
@if (Model != null)
{
    <div class="container" style="margin-top:1%;">
        <form method="post">
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
            <input type="hidden" name="IsActive" value="False" />
            <input type="hidden" name="Date" value="@DateTime.Now" />
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-2">
                    <label>Category Name</label>
                </div>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-2">
                    <label>Code</label>
                </div>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="CategoryCode" value="@Model.CategoryCode" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-5">
                    <input type="submit" class="btn btn-block btn-danger" value="Confirm Delete" />
                </div>
                <div class="col-md-3"></div>
            </div>
        </form>

    </div>
}

