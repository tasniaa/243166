@model BusinessManagementSystemApp.Models.Models.CategoryViewModel
@{
    ViewBag.Title = "GetCategoryDetails";
}
<div class="container" style="width:70%;margin-top:3%;">
    <div class="form-group row">
        <a style="margin-top:2%" href="/Category/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Category List</a><hr />
        <h3 class="text-info">Details of category (:-</h3>
    </div>
</div>
@if (Model != null)
{
    <div class="container" style="margin-top:1%;">
        <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Category Name</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" readonly/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Code</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="CategoryCode" value="@Model.CategoryCode" readonly/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4"></div>
            <div class="col-md-5">
                <a href="/Category/UpdateCategory?id=@Model.CategoryId" class="btn btn-primary">Edit</a>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
}

